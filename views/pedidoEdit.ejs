<%- include ('partials/navbar.ejs') %>

<div class="container">
    <div class="card">
        <div class="card-header bg-dark text-light">
            <h1>Editar pedido</h1>
        </div>
        <div class="card-body">
            <form action="/pedidos/update" method="POST">
                <label>Valor:</label>
                <input
                    class="form-control"
                    type="text"
                    name="valor"
                    id="valor"
                    value="<%= pedido.valor %>"
                    required
                />
                <input type="hidden" name="id" value="<%= pedido.id %>" />
                <br />
                <input
                    type="submit"
                    class="btn btn-warning"
                    value="Alterar"
                    onclick="return confirm('Confirma as alterações para o pedido <%= pedido.id %>')"
                />
            </form>
        </div>
    </div>
</div>
